<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{?config.title}{config.title} {/config.title}Twelescreen</title>
  <link rel="stylesheet" href="/stylesheets/base.css">
  {?config.theme}
    <link rel="stylesheet" href="/themes/{config.theme}/styles.css">
  {:else}
    <link rel="stylesheet" href="/themes/default/styles.css">
  {/config.theme}
</head>

<body{?config.category_key} id="category-{config.category_key}"{/config.category_key}>


  {+content}

  {/content}


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/javascripts/jquery-1.9.1.min.js"><\/script>')</script>

  <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>
  <script>window._ || document.write('<script src="/javascripts/underscore-min.js"><\/script>')</script>

  <script src="http://ajax.googleapis.com/ajax/libs/webfont/1.4.8/webfont.js"></script>
  {@eq key=page value="screen"}
    <script src="/components/socket.io-client/dist/socket.io.min.js"></script>
  {/eq}
  <script src="/javascripts/script.js"></script>

  <script>
    $(document).ready(function() {

      twelescreen_client.init(
        '{page}',
        {
          {@eq key=page value="screen"}
            font: '{config.font}',
            category_key: '{config.category_key}',
            title: "{config.title}",
            screen_names: [{#config.screen_names}'{.}',{/config.screen_names}],
            burn_in_text: "{config.burn_in_text|s}",
            disconnect_warning: "{config.disconnect_warning|s}",
            number_of_tweets: {config.number_of_tweets},
            time_per_slide: {config.time_per_slide},
            slide_transition_time: {config.slide_transition_time},
            greeting_time: {config.greeting_time},
            greetings: [{#config.greetings}"{.|s}",{/config.greetings}],
            slogans: [{#config.slogans}"{.|s}",{/config.slogans}]
        {/eq}
      });

    });
  </script>

</body>
</html>
